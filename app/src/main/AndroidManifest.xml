<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Controller.FirebaseInit"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DAM_ProyectoFinal"
        tools:targetApi="31">
        <activity
            android:name=".UI.Views.Screens.Ajustes"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Screens.Inicio"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Screens.Registrar"
            android:exported="false"
            android:parentActivityName=".UI.Views.Screens.Login" />
        <activity
            android:name=".UI.Views.Screens.Login"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Screens.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DAM_ProyectoFinal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>