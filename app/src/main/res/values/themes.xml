<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DAM_ProyectoFinal" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
    </style>

    <style name="Theme.DAM_ProyectoFinal" parent="Base.Theme.DAM_ProyectoFinal" />

    <style name="recuperar_button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
    </style>

    <style name="my_toast">
        <item name="android:backgroundTint">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="my_toast_text">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <style name="signin_layout_background">
        <item name="android:background">#ffdeab</item>
    </style>

    <style name="signin_layout_botton_close">
        <item name="android:tint">@color/md_theme_dark_secondaryContainer</item>
    </style>

    <style name="signin_layout_botton_close2" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">#422c00</item>
        <item name="rippleColor">#fabc49</item>
        <item name="android:textColor">@color/md_theme_dark_secondaryContainer</item>
    </style>

    <style name="signin_layout_text_color" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textColor">#422c00</item>
    </style>

    <style name="signin_layout_text_color2" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/md_theme_dark_secondaryContainer</item>
    </style>

    <style name="nav_header_background">
        <item name="android:background">@color/md_theme_light_secondaryContainer</item>
    </style>

    <style name="nav_header_logo_background">
        <item name="android:tint">@color/md_theme_light_outline</item>
    </style>

    <style name="nav_header_logo_title">
        <item name="android:textColor">@color/md_theme_dark_secondaryContainer</item>
    </style>

    <style name="nav_header_title">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="tint">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

</resources>